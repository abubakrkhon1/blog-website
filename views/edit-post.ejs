<%- include("partials/header.ejs") %>
<section class="create-post-main">
  <div class="create-post-main-container">
      <div class="create-post-text">
          <h1>Edit your post using this form!</h1>
      </div>
      <form action="/edit-post/<%= post.id %>" method="post">
          <div class="form-group">
              <label for="author">Author's Name:</label>
              <input type="text" id="author" name="author" value="<%= post.author %>" required>
          </div>
          <div class="form-group">
              <label for="title">Title:</label>
              <input type="text" id="title" name="title" value="<%= post.title %>" required>
          </div>
          <div class="form-group">
              <label for="content">Content:</label>
              <textarea id="content" name="content" rows="4" required><%= post.content %></textarea>
          </div>
          <button type="submit" class="create-post-button">Submit</button>
      </form>
  </div>
</section>
<%- include("partials/footer.ejs") %>